{
   "name": "graphql-ts-server-boilerplate",
   "version": "0.0.1",
   "description": "Awesome project developed with TypeORM.",
   "devDependencies": {
      "@types/bcryptjs": "^2.4.2",
      "@types/jest": "^23.3.13",
      "@types/node": "^10.12.18",
      "@types/uuid": "^3.4.4",
      "cross-env": "^5.2.0",
      "gql2ts": "^1.10.1",
      "jest": "^23.6.0",
      "nodemon": "^1.18.9",
      "ts-jest": "^23.10.5",
      "ts-node": "8.0.1",
      "tslint": "^5.12.1",
      "tslint-config-prettier": "^1.17.0",
      "typescript": "3.2.4"
   },
   "dependencies": {
      "bcryptjs": "^2.4.3",
      "graphql": "^14.1.1",
      "graphql-import": "^0.7.1",
      "graphql-request": "^1.8.2",
      "graphql-tools": "^4.0.3",
      "graphql-yoga": "^1.17.0",
      "pg": "^7.8.0",
      "reflect-metadata": "^0.1.13",
      "typeorm": "0.2.12"
   },
   "scripts": {
      "start": "cross-env NODE_ENV=development nodemon --exec ts-node --files src/index.ts",
      "test": "cross-env NODE_ENV=test jest --forceExit",
      "gen-schema-types": "gql2ts src/schema.graphql -o src/types/schema.d.ts"
   },
   "jest": {
      "transform": {
         "^.+\\.tsx?$": "ts-jest"
      },
      "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
      "moduleFileExtensions": [
         "ts",
         "tsx",
         "js",
         "jsx",
         "json",
         "node"
      ]
   }
}
